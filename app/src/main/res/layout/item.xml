<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    >

    <LinearLayout
        android:id="@+id/lnOne"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5678901234"
            android:textColor="#FAAB5C"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/itemPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="999"
            android:textColor="#FAAB5C"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:layout_weight="3"
            android:paddingEnd="10dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnTwo"
        android:layout_below="@+id/lnOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="2004-04-20 11:11:53"
            android:textColor="#6C6C6C"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/itemUpdatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2004-04-20 11:11:53"
            android:textColor="#6C6C6C"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:paddingEnd="10dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnThree"
        android:layout_below="@+id/lnTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5678901234\n5678901234\n5678901234\n5678901234\n5678901234\n5678901234"
            android:textColor="#6C6C6C"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls"
            android:scrollHorizontally="false"

            android:ellipsize="end"
            />
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_weight="4"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bin"
            android:background="@null"

            android:layout_marginStart="10dp"
            />

    </LinearLayout>

</RelativeLayout>